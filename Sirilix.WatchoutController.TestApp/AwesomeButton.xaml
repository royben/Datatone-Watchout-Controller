<Border x:Class="Sirilix.WatchoutController.TestApp.AwesomeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">

    <fa:ImageAwesome x:Name="f" RenderTransformOrigin="0.5,0.5" Icon="{Binding RelativeSource={RelativeSource AncestorType=Border},Path=Image}">
        <fa:ImageAwesome.RenderTransform>
            <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"></ScaleTransform>
        </fa:ImageAwesome.RenderTransform>
    </fa:ImageAwesome>
</Border>
